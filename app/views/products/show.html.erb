<div class="main_content">
	<div id="product_top" class="row">
		<div class="col-md-4">
			<% if @products.default_photo.present? %>
				<%= image_tag @products.default_photo.image.medium.url, class: "product_image" %>
			<% else %>
				<%= image_tag("http://placehold.it/200x200&text=No Pic") %>
		    <% end %>	
		</div>
		<div class="col-md-8">
			<div id="product_info">
				<h1><%= @products.title %></h1>
				<p class="description"><%= @products.description %></p><hr>
				<h4>還剩 <%= @products.quantity %> 組</h4>	
				 <p class="price">$<%= @products.price %> </p>	
				
				<%= link_to "放入購物車", root_path, class: "btn btn-default pull-right" %>
			</div>
		</div>
	</div>	
</div>