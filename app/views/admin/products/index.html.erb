<div class="panel-heading">
	<h1>後台管理 - 商品清單</h1>	
</div>

<div class="row">
	<div class="col-md-9 col-md-offset-2">
		<table class="table">
			<thead>
				<tr>
					<th>#</th>
					<th width="220">商品圖片</th>
					<th>商品名稱</th>
					<th>商品價格</th>
					<th>商品數量</th>
					<th>動作</th>
				</tr>
				<% @products.each do |product| %>
				<tr>
					<td><%= product.id %></td>
					<td>
						<%= render_product_photo(product.default_photo) %>
					</td>
					<td><%= product.title %></td>
					<td><%= product.price %></td>
					<td><%= product.quantity %></td>
					<td>
						<%= link_to "修改", edit_admin_product_path(product), class: "btn btn-default" %>
						<%= link_to "刪除", admin_product_path(product), method: :delete, data: { confirm: "確定要刪除嗎？" } , class: "btn btn-default" %>
					</td>			
				</tr>
				<% end %>
			</thead>
		</table>
	</div>
</div>