<%= simple_form_for [:admin, @product], html: { multipart: true } do |f| %>
	<div class="col-md-6 col-md-offset-3">
		目前顯示商品圖 <br>
		<%= render_product_photo(@product.default_photo, :medium)%>
		<%= f.simple_fields_for :photos, @product.default_photo do |c| %>
			<%= c.input :image, as: :file %>
		<% end %>

		<%= f.input :title, label: '標題', input_html: { class: 'form-control' } %>
		<%= f.input :description, label: '敘述', input_html: { class: 'form-control' } %>	
		<%= f.input :quantity, label: '數量', input_html: { class: 'form-control' } %>
		<%= f.input :price, label: '價錢', input_html: { class: 'form-control' } %>
	<%= f.button :submit, class: 'btn btn-primary' %>
	<%= link_to "Back", admin_products_path, class: "btn btn-default" %>
	</div>
<% end %>