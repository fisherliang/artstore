<div class="row">
  <div class="col-md-9 col-md-offset-2">
    <div class="panel-heading">
      <h1>購物明細</h1> 
    </div>
    <table class="table">
      <thead>
        <tr>
          <th>商品名稱</th>
          <th>數量</th>
          <th>單價</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% current_cart.cart_items.each do |item| %>
          <tr>
            <td>
              <%= item.product.title %>
            </td>
            <td><%= item.quantity %></td>
            <td><%= item.product.price %></td>
            <td><%= render_item_sub_total_price(item) %></td>
          </tr>
        <% end %>

      </tbody>
    </table>

    <div id="product_price">
        <p>總金額 NT$ <%= render_cart_total_price(current_cart) %></p>
    </div>

    <hr>

    <div class="panel-heading">
        <h1> 訂單資訊 </h1>
    </div>

    <div class="order-form">
      <%= simple_form_for @order do |f| %>
        <%= f.simple_fields_for :info do |c| %>
          <legend> 購買人</legend>
          <div class="form-group col-lg-6">
            <%= c.input :billing_name, label: "姓名" %>
          </div>
          <div class="form-group col-lg-6">
            <%= c.input :billing_address, label: "地址"  %>
          </div>

          <legend> 收貨人</legend>
          <div class="form-group col-lg-6">
           <%= c.input :shipping_name, label: "姓名"  %>
          </div>
          <div class="form-group col-lg-6">
            <%= c.input :shipping_address, label: "收件地址"  %>
          </div>
        <% end %>

        <%= f.button :submit, "生成訂單", class: "btn btn-lg btn-danger pull-right"%>
        
      <% end %>

    </div>
  </div>
</div>